{
  "name": "agent-chat-fullstack-monorepo",
  "version": "1.0.0",
  "description": "全栈AI聊天应用 - Next.js + NestJS + React Native Monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\" \"pnpm dev:mobile\"",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api start:dev",
    "dev:mobile": "pnpm --filter mobile start",
    "build": "pnpm -r build",
    "start": "concurrently \"pnpm start:web\" \"pnpm start:api\"",
    "start:web": "pnpm --filter web start",
    "start:api": "pnpm --filter api start:prod",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.5.1",
  "dependencies": {
    "@babel/runtime": "^7.28.2"
  }
}
